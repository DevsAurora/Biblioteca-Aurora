<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Gerenciar Livros</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Lista de Livros</h1>
  <%- include('../partials/nav') %>

  <!-- Formulário para criar novo livro -->
  <h2>Adicionar Livro</h2>
  <form action="/livros" method="POST">
    <label>Título:</label>
    <input type="text" name="titulo" required>
    <br>

    <label>Autor:</label>
    <input type="text" name="autor" required>
    <br>

    <label>Ano de Publicação:</label>
    <input type="number" name="ano_publicacao">
    <br>

    <label>Gênero:</label>
    <input type="text" name="genero">
    <br>

    <label>ISBN:</label>
    <input type="text" name="isbn" required>
    <br>

    <button type="submit">Salvar</button>
  </form>

  <hr>

  <!-- Lista de livros existentes -->
  <h2>Livros cadastrados</h2>
  <table border="1" cellpadding="8">
    <thead>
      <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Ano</th>
        <th>Gênero</th>
        <th>ISBN</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% livros.forEach(livro => { %>
        <tr>
          <td><%= livro.titulo %></td>
          <td><%= livro.autor %></td>
          <td><%= livro.ano_publicacao %></td>
          <td><%= livro.genero %></td>
          <td><%= livro.isbn %></td>
          <td>
            <!-- Formulário para atualizar -->
            <form action="/livros/<%= livro.id %>/update" method="POST" style="display:inline;">
              <input type="text" name="titulo" value="<%= livro.titulo %>" required>
              <input type="text" name="autor" value="<%= livro.autor %>" required>
              <input type="number" name="ano_publicacao" value="<%= livro.ano_publicacao %>">
              <input type="text" name="genero" value="<%= livro.genero %>">
              <input type="text" name="isbn" value="<%= livro.isbn %>" required>
              <button type="submit">Atualizar</button>
            </form>

            <!-- Formulário para deletar -->
            <form action="/livros/<%= livro.id %>/delete" method="POST" style="display:inline;">
              <button type="submit">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>