<!DOCTYPE html>
<html>
<head>
  <title>Lista de Livros</title>
</head>
<body>
  <h1>Lista de Livros</h1>

  <%- include('../partials/nav') %>

  <!-- Bot達o para criar novo livro -->
  <a href="/livros/form">Novo Livro</a>

  <ul>
    <% livros.forEach(livro => { %>
      <li>
        <strong><%= livro.titulo %></strong> - <%= livro.autor %> - <%= livro.genero %>
        
        <!-- Bot達o Editar (GET) -->
        <form action="/livros/form" method="GET" style="display:inline;">
          <input type="hidden" name="id" value="<%= livro.id %>">
          <button type="submit">Editar</button>
        </form>

        <!-- Bot達o Excluir (POST) -->
        <form action="/livros/<%= livro.id %>/delete" method="POST" style="display:inline;">
          <button type="submit">Excluir</button>
        </form>

        <!-- Bot達o Gerenciar Exemplares (GET) -->
        <form action="/exemplares/<%= livro.id %>" method="GET" style="display:inline;">
          <button type="submit">Gerenciar Exemplares</button>
        </form>

        <!-- Link de detalhes -->
        <a href="/livros/<%= livro.id %>">Detalhes</a>

      </li>
    <% }) %>
  </ul>
</body>
</html>